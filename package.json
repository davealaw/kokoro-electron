{
  "name": "kokoro-electron",
  "version": "1.0.4",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "npm run lint && npm run format:check",
    "code-quality:fix": "npm run lint:fix && npm run format",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "tts",
    "text-to-speech",
    "kokoro",
    "neural-voice"
  ],
  "author": {
    "name": "Dave A. Law",
    "email": "40339226+davealaw@users.noreply.github.com"
  },
  "license": "MIT",
  "description": "A user-friendly Electron-based GUI for local neural text-to-speech using kokoro-js",
  "repository": {
    "type": "git",
    "url": "https://github.com/davealaw/kokoro-electron.git"
  },
  "homepage": "https://github.com/davealaw/kokoro-electron#readme",
  "bugs": {
    "url": "https://github.com/davealaw/kokoro-electron/issues"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "kokoro-js": "^1.2.1",
    "p-limit": "^7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.38.0",
    "babel-jest": "^30.2.0",
    "electron": "^36.9.4",
    "electron-builder": "^26.0.12",
    "electron-mock-ipc": "^0.3.12",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.davealaw.kokoro-electron",
    "productName": "Kokoro TTS",
    "asar": false,
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "scripts/**/*",
      "styles/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "maintainer": "Dave A. Law <40339226+davealaw@users.noreply.github.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
